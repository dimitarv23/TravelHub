@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="container d-flex flex-column align-items-center mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <form method="post" class="col-md-6">
        @Html.AntiForgeryToken()
        <div class="mt-2">
            <label asp-for="UsernameOrEmail" class="col-sm-9">
                <span class="h6 small text-muted">Username or Email <span class="text-danger">*</span></span>
            </label>
            <input asp-for="UsernameOrEmail" class="form-control" id="Username" placeholder="Enter your username or email" required />
            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
        </div>
        <div class="mt-2">
            <label asp-for="Password" class="col-sm-9">
                <span class="h6 small text-muted">Password <span class="text-danger">*</span></span>
            </label>
            <input asp-for="Password" class="form-control" id="Password" placeholder="Enter your password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check mt-3 d-flex justify-content-center">
            <input asp-for="RememberMe" class="form-check-input me-2" id="RememberMe" />
            <label class="form-check-label" for="RememberMe">
                Remember Me?
            </label>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary btn-block col-md-4" style="font-size: 20px;">
                Login
            </button>
        </div>
        <div class="text-center mt-3">
            <span>Don't have an account?</span>
            <a asp-action="Register" asp-controller="User">Register here</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}