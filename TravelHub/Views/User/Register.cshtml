@model RegisterViewModel
@{
    ViewData["Title"] = "Register Page";
}

<div class="container d-flex flex-column align-items-center mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <form method="post" class="col-md-8">
        <div class="d-flex align-items-center justify-content-between">
            <div style="width: 49%;">
                <label asp-for="FirstName" class="col-sm-9">
                    <span class="h6 small text-muted">First Name <span class="text-danger">*</span></span>
                </label>
                <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="Enter your first name" required />
            </div>
            <div style="width: 49%;">
                <label asp-for="LastName" class="col-sm-9">
                    <span class="h6 small text-muted">Last Name <span class="text-danger">*</span></span>
                </label>
                <input asp-for="LastName" class="form-control" id="LastName" placeholder="Enter your last name" required />
            </div>
        </div>
        <div class="mt-2">
            <label asp-for="Username" class="col-sm-9">
                <span class="h6 small text-muted">Username <span class="text-danger">*</span></span>
            </label>
            <input asp-for="Username" class="form-control" id="Username" placeholder="Enter your username" required />
        </div>
        <div class="mt-2">
            <label asp-for="Email" class="col-sm-9">
                <span class="h6 small text-muted">Email <span class="text-danger">*</span></span>
            </label>
            <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your email" required />
        </div>
        <div class="mt-2">
            <label asp-for="Password" class="col-sm-9">
                <span class="h6 small text-muted">Password <span class="text-danger">*</span></span>
            </label>
            <input asp-for="Password" class="form-control" id="Password" placeholder="Enter your password" required />
        </div>
        <div class="mt-2">
            <label asp-for="ConfirmPassword" class="col-sm-9">
                <span class="h6 small text-muted">Confirm Password <span class="text-danger">*</span></span>
            </label>
            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm your password" required />
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-block mt-4 col-md-4" style="font-size: 20px;">
                Register
            </button>
        </div>
        <div class="text-center mt-3">
            <span>Already have an account?</span>
            <a asp-action="Login" asp-controller="User">Login here</a>
        </div>
    </form>
</div>