@model TravelDetailsViewModel
@{
    ViewData["Title"] = "Travel Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Destination Image">
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <p class="text-center">@Model.Description</p>
            <hr>
            <dl class="row m-0">
                <div class="d-flex">
                    <dt class="col-sm-4">Type:</dt>
                    <dd class="col-sm-8">@Model.Type</dd>
                </div>
                <div class="d-flex mt-2">
                    <dt class="col-sm-4">Destination:</dt>
                    <dd class="col-sm-8">@Model.Destination</dd>
                </div>
                @if (Model.HotelName != null)
                {
                    <div class="d-flex mt-2">
                        <dt class="col-sm-4">Hotel Name:</dt>
                        <dd class="col-sm-8">@Model.HotelName</dd>
                    </div>
                }
                <div class="d-flex mt-2">
                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">$@Model.Price</dd>
                </div>
                <div class="d-flex mt-2">
                    <dt class="col-sm-4">Date From:</dt>
                    <dd class="col-sm-8">@Model.DateFrom.ToString("d")</dd>
                </div>
                <div class="d-flex mt-2">
                    <dt class="col-sm-4">Date To:</dt>
                    <dd class="col-sm-8">@Model.DateTo.ToString("d")</dd>
                </div>
                <div class="d-flex mt-2">
                    <dt class="col-sm-4">Places Left:</dt>
                    <dd class="col-sm-8">@Model.PlacesLeft</dd>
                </div>
                <div class="d-flex mt-2">
                    <dt class="col-sm-4">Meeting Location:</dt>
                    <dd class="col-sm-8">@Model.MeetingLocation</dd>
                </div>
            </dl>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <hr class="mb-2" />
            <div class="text-center">
                <a asp-controller="Travels" asp-action="AddToFavorites" asp-route-travelId="@Model.Id" class="btn green-background">
                    <i class="fas fa-star"></i>
                </a>
                @if (User.IsInRole("Organizer"))
                {
                    <a asp-controller="Travels" asp-action="Edit" asp-route-travelId="@Model.Id" class="btn btn-info">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-controller="Travels" asp-action="Delete" asp-route-travelId="@Model.Id" class="btn red-background">
                        <i class="fas fa-trash"></i>
                    </a>
                }
            </div>
        </div>
    </div>
</div>