<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fontawesome/all.css" />
    <link rel="stylesheet" href="~/css/toastr.min.css" />
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/TravelHub-logo.png" class="header-logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between me-3">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark navbar-link" asp-controller="Travels" asp-action="All">Travels</a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark navbar-link" asp-controller="Destinations" asp-action="All">Destinations</a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark navbar-link" asp-controller="Hotels" asp-action="All">Hotels</a>
                            </li>

                            @if (User.IsInRole("Organizer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark navbar-link" asp-controller="Bookings" asp-action="All">Bookings</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark navbar-link" asp-controller="Bookings" asp-action="Mine">My Bookings</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted d-flex justify-content-around align-items-center bg-white">
        <div class="container col-md-6 footer-element">
            TravelHub 2023 - All rights reserved &copy;
        </div>
        <div class="col-md-3 footer-element">
            <img src="~/img/index/travelhub-logo.png" class="footer-logo">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="https://kit.fontawesome.com/1919e87476.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>