@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav me-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-4">
            <a class="nav-link text-dark navbar-link" title="Manage" style="padding-top: 9px;">
                Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark navbar-link">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark navbar-link" asp-controller="User" asp-action="Login">
                Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark navbar-link" asp-controller="User" asp-action="Register">
                Register
            </a>
        </li>
    }
</ul>